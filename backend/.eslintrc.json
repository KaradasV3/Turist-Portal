{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "node/no-deprecated-api": ["error", { "version": ">=8.0.0" }],
    "node/file-extension-in-import": ["error", "always"],
    "node/no-unsupported-features/es-syntax": ["off"]
  }
}
